{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly",
		"chaiExpect": "readonly",
		"elasticApm": "readonly"
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"babel"
	],
	"rules": {
		"semi": [2, "never"],
		"no-underscore-dangle": "off",
		"comma-dangle": ["error", {"functions": "ignore"}],
		"no-console": "off"
	}
}
